<Window x:Class="UdlaanSystem.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:UdlaanSystem"
        mc:Ignorable="d"
        Title="MainWindow" Height="514.224" Width="748.447">
    <Grid>
        <TextBox x:Name="MainBox" HorizontalAlignment="Left" Height="23" TextWrapping="Wrap" VerticalAlignment="Top" Width="131" Margin="10,10,0,0"/>
        <Button x:Name="UserButton" Content="Opret/Rediger Bruger" HorizontalAlignment="Left" Margin="158,11,0,0" VerticalAlignment="Top" Width="131" Click="Button_Click"/>
        <Button x:Name="ItemButton" Content="Opret/Tilføj Produkter" HorizontalAlignment="Left" Margin="306,11,0,0" VerticalAlignment="Top" Width="131"/>
        <ListView x:Name="ListWiewItems" HorizontalAlignment="Left" Height="213" Margin="10,258,0,0" VerticalAlignment="Top" Width="713" RenderTransformOrigin="0.5,0.5">
            <ListView.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform AngleY="-0.08"/>
                    <RotateTransform/>
                    <TranslateTransform Y="-0.493"/>
                </TransformGroup>
            </ListView.RenderTransform>
            <ListView.View>
                <GridView>
                    <GridViewColumn/>
                </GridView>
            </ListView.View>
        </ListView>
        <Canvas x:Name="CanvasPanelUserInfo" HorizontalAlignment="Left" Height="191" Margin="10,55,0,0" VerticalAlignment="Top" Width="720">
            <Label x:Name="LabelName" Content="Navn:" Canvas.Left="10" Canvas.Top="20"/>
            <Label x:Name="LabelZbc" Content="ZBC ID:" Canvas.Left="10" Canvas.Top="89"/>
            <Label x:Name="LabelMifare" Content="Mifare:" Canvas.Left="10" Canvas.Top="153"/>
            <Label x:Name="LabelPhone" Content="Telefon Nr.:" Canvas.Left="322" Canvas.Top="20"/>
            <Label x:Name="LabelIsTeacher" Content="Ansat:" Canvas.Left="322" Canvas.Top="89"/>
            <Label x:Name="LabelNameResult" Content="Label" Canvas.Left="82" Canvas.Top="20"/>
            <Label x:Name="LabelZbcName" Content="Label" Canvas.Left="82" Canvas.Top="89"/>
            <Label x:Name="LabelMifareResult" Content="Label" Canvas.Left="82" Canvas.Top="153"/>
            <Label x:Name="LabelPhoneResult" Content="Label" Canvas.Left="392" Canvas.Top="20"/>
            <Label x:Name="LabelTeacherResult" Content="Label" Canvas.Left="392" Canvas.Top="89"/>
            <Label x:Name="label" Content="Label" Canvas.Left="560" Canvas.Top="120"/>
        </Canvas>

    </Grid>
</Window>

        <Button x:Name="ButtonStat" Content="Vis Statestik" HorizontalAlignment="Right" Margin="7 12 20 0" VerticalAlignment="Top" Width="131" Grid.Column="1" Click="ButtonStat_Click" Foreground="White" Visibility="Visible">

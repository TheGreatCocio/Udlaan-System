        <Label Content="Udlån / Arkiv" Grid.Column="1" HorizontalAlignment="Left" Margin="249,29,0,0" VerticalAlignment="Top" FontSize="16"/>
        <Button x:Name="ButtonLend" Content="Udlån" IsEnabled="False" Grid.Column="1" HorizontalAlignment="Left" Margin="477,225,0,0" VerticalAlignment="Top" Width="90" Click="ButtonLend_Click" Foreground="White" Grid.Row="1" Height="27">
            <Button.Background>
                <LinearGradientBrush EndPoint="0.5,1" MappingMode="RelativeToBoundingBox" StartPoint="0.5,0">
                    <GradientStop Color="#FF3F3F46" Offset="0.793"/>
                    <GradientStop Color="#FF9E9EA2"/>
                    <GradientStop Color="#FF9E9EA2" Offset="1"/>
                    <GradientStop Color="#FF3F3F46" Offset="0.287"/>
                </LinearGradientBrush>
            </Button.Background>
        </Button>
        <Button x:Name="ButtonReturn" Content="Aflever" IsEnabled="False" Grid.Column="1" HorizontalAlignment="Left" Margin="358,225,0,0" VerticalAlignment="Top" Width="90" Click="ButtonReturn_Click" Foreground="White" Grid.Row="1" Height="27">
            <Button.Background>
                <LinearGradientBrush EndPoint="0.5,1" MappingMode="RelativeToBoundingBox" StartPoint="0.5,0">
                    <GradientStop Color="#FF3F3F46" Offset="0.793"/>
                    <GradientStop Color="#FF9E9EA2"/>
                    <GradientStop Color="#FF9E9EA2" Offset="1"/>
                    <GradientStop Color="#FF3F3F46" Offset="0.287"/>
                </LinearGradientBrush>

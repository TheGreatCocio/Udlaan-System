        <Button x:Name="ButtonReturnWIthoutCard" Content="Aflever Uden Studie Kort" IsEnabled="False" Grid.Column="1" HorizontalAlignment="Left" Margin="140.2,224.8,0,0" VerticalAlignment="Top" Width="180" Click="ButtonReturnWithoutCard_Click" Foreground="White" Grid.Row="1" Height="27">
            <Button.Background>
                <LinearGradientBrush EndPoint="0.5,1" MappingMode="RelativeToBoundingBox" StartPoint="0.5,0">
                    <GradientStop Color="#FF3F3F46" Offset="0.793"/>
                    <GradientStop Color="#FF9E9EA2"/>

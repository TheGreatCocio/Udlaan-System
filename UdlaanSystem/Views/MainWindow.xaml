        <Button Name="RestartScanner" Content="Genstart Scanner" HorizontalAlignment="Left" Margin="0.2,12,0,0" VerticalAlignment="Top" Width="125" Height="22" Grid.Column="1" Foreground="White" Click="RestartScanner_Click">
            <Button.Background>
                <LinearGradientBrush EndPoint="0.5 1" MappingMode="RelativeToBoundingBox" StartPoint="0.5 0">
                    <GradientStop Color="#FF3F3F46" Offset="0.793" />
                    <GradientStop Color="#FF9E9EA2"/>
                    <GradientStop Color="#FF9E9EA2" Offset="1"/>
